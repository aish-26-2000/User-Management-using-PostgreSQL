{
    "env": {
        "commonjs": true,
        "es2021": true,
        "node": true,
        "jest": true
    },
    "extends": ["eslint:recommended", "prettier"],
    "parserOptions": {
        "ecmaVersion": "latest"
    },
    "rules": {
        "linebreak-style": ["error", "windows"],
        "semi": ["error", "always"],
        "no-const-assign": "error",
        "no-undefined": "error",
        "no-unused-vars": "error"
    }
}
